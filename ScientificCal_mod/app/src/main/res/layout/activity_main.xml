<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#f69256">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/round_corner_blue"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/current"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:padding="15dp"
            android:background="@drawable/round_corner_white"
            android:fontFamily="@font/nanum_squareeb"
            android:textSize="30dp"
            android:textColor="#965251"
            android:text="1234567890"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:layout_marginVertical="3dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.3">
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1.7">
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:textSize="16dp"
                    android:text="Tax-"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="15dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:textSize="15dp"
                    android:text="Tax+"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="3dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="M/EX"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="%"
                    android:textSize="25dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:src="@drawable/root"
                    android:scaleType="centerInside"
                    android:padding="7dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:textSize="30dp"
                    android:text="â–¶"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:textSize="28dp"
                    android:text="GT"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="MC"
                    android:textSize="28dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="MR"
                    android:textSize="28dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="M-"
                    android:textSize="28dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:textSize="28dp"
                    android:text="M+"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_blue"
                    android:layout_margin="4dp"
                    android:src="@drawable/divide"
                    android:scaleType="centerInside"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="+/_"
                    android:textSize="25dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="1"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="2"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="3"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_blue"
                    android:layout_margin="4dp"
                    android:src="@drawable/multiply"
                    android:scaleType="centerInside"
                    android:padding="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="C"
                    android:textSize="28dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="4"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="5"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="6"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/subtract"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_blue"
                    android:layout_margin="4dp"
                    android:src="@drawable/subtract"
                    android:scaleType="centerInside"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/AC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="AC"
                    android:textSize="28dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="1"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="2"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="3"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_blue"
                    android:layout_margin="4dp"
                    android:src="@drawable/add"
                    android:scaleType="centerInside"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="0"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="00"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_blue"
                    android:layout_margin="4dp"
                    android:src="@drawable/dot"
                    android:scaleType="centerInside"
                    android:paddingHorizontal="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_blue"
                    android:layout_margin="4dp"
                    android:src="@drawable/equal"
                    android:scaleType="centerInside"
                    android:padding="6dp"/>
            </LinearLayout>
            <ImageButton
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ricecat"
                android:scaleType="centerInside"
                android:background="#f69256" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>